        }
      }
    },
    {
      "parameters": {
        "jsCode": "const raw = $input.first().json.content.parts[0].text;\nlet cleaned = raw.trim()\n  .replace(/^```json\\s*/i, '')\n  .replace(/^```\\s*/i, '')\n  .replace(/```$/i, '')\n  .replace(/^\\uFEFF/, '');\n\nlet data;\ntry {\n  data = JSON.parse(cleaned);\n} catch (e) {\n  throw new Error(\"Não consegui fazer JSON.parse do retorno do modelo. Conteúdo:\\n\" + cleaned);\n}\n\nreturn [{\n  json: {\n    descricao: data.descricao || '',\n    categoria: data.categoria || 'Outros',\n    data: data.data || new Date().toISOString().slice(0,10),\n    valor: Number(data.valor) || 0,\n    dividido: data.dividido || 'Não'\n  }\n}];\n"
      },
